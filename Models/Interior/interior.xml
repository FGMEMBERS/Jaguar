<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>

    <!-- Objets transparents -->
    <object-name>intverriere</object-name>
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intverriere</object-name>
    <object-name>intvitres</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intverriere</object-name>
    <object-name>intvitres</object-name>
  </animation>

  <!-- Tableau de bord -->
  <model>
    <path>Aircraft/Jaguar/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m> 0 </z-m>
    </offsets>
  </model>

  <model>
    <path>Aircraft/Jaguar/Models/Interior/Panel/Instruments/divers/stick.xml</path>
    <offsets>
      <x-m> -3.25 </x-m>
      <y-m> -0.00 </y-m>
      <z-m> -0.45 </z-m>
    </offsets>
  </model>
  
  <model>
    <path>Aircraft/Jaguar/Models/Interior/Panel/Instruments/divers/pedals.xml</path>
    <offsets>
      <x-m> -3.60 </x-m>
      <y-m> -0.00 </y-m>
      <z-m> -0.50 </z-m>
    </offsets>
  </model>
  
  <!-- Pilote -->
  <model>
    <name>Pilote</name>
    <path>Aircraft/Jaguar/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -2.736 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.097 </z-m>
    </offsets>
  </model>

  <!-- Canopy -->
  <animation>
    <type>rotate</type>
    <object-name>intverriere</object-name>
    <property>instrumentation/doors/crew/position-norm</property>
    <interpolation>
      <entry><ind> 0 </ind><dep>  0 </dep></entry>
      <entry><ind> 1 </ind><dep> 60 </dep></entry>
    </interpolation>
    <center>
      <x-m> -2.148 </x-m>
      <y-m>  0.000 </y-m>
      <z-m>  0.642 </z-m>
    </center>
    <axis>
      <x> 0 </x>
      <y> 1 </y>
      <z> 0 </z>
    </axis>
  </animation>

</PropertyList>

